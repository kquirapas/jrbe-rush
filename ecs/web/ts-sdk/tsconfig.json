{
	"compilerOptions": {
		"target": "ES6",
		// "target": "ES5",
		"module": "commonjs",
		// "module": "NodeNext",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["ES6"],
		"moduleResolution": "node",
		"declaration": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"types": ["./src/types/types.d.ts", "node"]
	},
	"include": ["*/.d.ts", "src/**/*.ts"],
	"exclude": ["node_modules"]
}
